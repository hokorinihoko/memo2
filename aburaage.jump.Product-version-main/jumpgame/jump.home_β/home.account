<!DOCTYPE html>
<html lang="ja">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>ホーム＋アカウント プロトタイプ</title>
<style>
  body { margin:0; font-family:sans-serif; background:#e0f7fa; }
  button { padding:10px 15px; font-size:16px; border:none; border-radius:5px; cursor:pointer; }

  /* ホーム画面 */
  #homeScreen { position:relative; width:100vw; height:100vh; display:flex; justify-content:center; align-items:center; flex-direction:column; }

  #playBtn { font-size:24px; background:#4caf50; color:#fff; margin-bottom:20px; }

  #skinBtn { position:absolute; bottom:20px; left:50%; transform:translateX(-50%); background:#ff9800; color:#fff; }
  #gachaBtn { position:absolute; bottom:20px; right:20px; background:#9c27b0; color:#fff; }
  #accountBtn { position:absolute; bottom:20px; left:20px; background:#03a9f4; color:#fff; }

  /* アカウントモーダル */
  #accountModal {
    display:none;
    position:fixed; top:0; left:0; width:100%; height:100%;
    background:rgba(0,0,0,0.6);
    justify-content:center; align-items:center;
  }
  #accountContentBox {
    background:#fff; padding:20px; border-radius:10px; width:80%; max-width:300px; position:relative; text-align:center;
  }
  #closeAccountBtn { position:absolute; top:5px; right:5px; font-size:18px; background:none; color:#333; cursor:pointer; border:none; }
  input { padding:8px; width:80%; margin-bottom:10px; border:1px solid #ccc; border-radius:5px; }
</style>
</head>
<body>

<!-- ホーム画面 -->
<div id="homeScreen">
  <button id="playBtn">プレイ</button>
  <button id="skinBtn">スキン</button>
  <button id="gachaBtn">ガチャ</button>
  <button id="accountBtn">アカウント</button>
</div>

<!-- アカウントモーダル -->
<div id="accountModal">
  <div id="accountContentBox">
    <button id="closeAccountBtn">×</button>
    <div id="accountContent"></div>
  </div>
</div>

<script>
const accountModal = document.getElementById('accountModal');
const accountBtn = document.getElementById('accountBtn');
const closeAccountBtn = document.getElementById('closeAccountBtn');

let loggedIn = false; 
let username = '';
let gp = 0;

// ホームのアカウントボタン
accountBtn.addEventListener('click', () => {
  updateAccountModal();
  accountModal.style.display = 'flex';
});

// モーダル閉じる
closeAccountBtn.addEventListener('click', () => {
  accountModal.style.display = 'none';
});

// ログイン処理（仮）
function loginUser(name) {
  if(name.trim() === '') return alert('ユーザー名を入力してください');
  loggedIn = true;
  username = name;
  gp = 25; // 仮GP
  updateAccountModal();
}

// ログアウト処理
function logoutUser() {
  loggedIn = false;
  username = '';
  gp = 0;
  updateAccountModal();
}

// モーダル内容更新
function updateAccountModal() {
  if (loggedIn) {
    document.getElementById('accountContent').innerHTML = `
      <p>ユーザー名: ${username}</p>
      <p>GP: ${gp}</p>
      <button onclick="logoutUser()">ログアウト</button>
    `;
  } else {
    document.getElementById('accountContent').innerHTML = `
      <input type="text" id="usernameInput" placeholder="ユーザー名">
      <button onclick="loginUser(document.getElementById('usernameInput').value)">ログイン</button>
    `;
  }
}
</script>

</body>
</html>
